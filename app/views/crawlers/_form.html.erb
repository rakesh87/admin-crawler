<%= form_for([@user, crawler]) do |f| %>
  <% if crawler.errors.any? %>
    <div id="error_explanation form-group">
      <h5>
        <%= pluralize(crawler.errors.count, "error") %> 
        prohibited this crawler from being saved:
      </h5>

      <ul>
      <% crawler.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :url %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "save", class: "btn btn-primary" %>
  </div>
<% end %>
